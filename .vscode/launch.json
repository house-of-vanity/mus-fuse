    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "env": {"RUST_BACKTRACE": "1"},
            "request": "launch",
            "name": "Debug executable 'musfuse'",
            "cargo": {
                "args": [
                    "run",
                ],
            },
            "args": [
                "mnt"
            ],
            "cwd": "${workspaceFolder}",
            "postDebugTask": "Umount FUSE",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'musfuse'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=musfuse",
                    "--package=musfuse"
                ],
                "filter": {
                    "name": "musfuse",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}